  "scripts": {
    "start": "cross-env NODE_ENV=development node --max-old-space-size=4096 server/index.js",
    "start:prod": "npm run clean && cross-env NODE_ENV=production node server/index.js",
    "format": "prettier --single-quote --semi=false --write '{src,server,webpack}/**/*.js' && eslint --fix src server webpack",
    "clean": "rimraf build",
    "test": "node scripts/test.js",
    "test:watch": "node scripts/test.js --watch",
    "cm": "git-cz",
    "coverage": "node scripts/test.js --coverage",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
